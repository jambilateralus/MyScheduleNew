<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            >






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_title"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_to_date"
                android:layout_below="@id/schedule_title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_from_date"
                android:layout_below="@id/schedule_to_date"
                />




            <ImageButton
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/menu_button"
                android:src="@drawable/menu"
                android:layout_below="@+id/schedule_to_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <ToggleButton
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton"
                android:layout_above="@+id/schedule_from_date"
                android:layout_alignRight="@+id/menu_button"
                android:layout_alignEnd="@+id/menu_button" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>